<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<%= link_to 'New User', new_user_path %> <br>

<table>
	<caption>Users Tabel</caption>
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th colspan="3">action</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |row| %>
		<tr>
			<td><%= row.name %></td>
			<td><%= row.email %></td>
			<td><%= link_to 'Show', row %></td>
			<td><%= link_to 'Edit', edit_user_path(row) %></td>
			<td><%= link_to 'Destroy', row, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

