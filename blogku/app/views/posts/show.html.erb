<h1> <%= @post.title %> </h1> 
<p>
	<%= @post.body %>
</p>

<!-- View Comments -->
<h4>Komentar</h4>
<% @post.comments.each do |c| %>
	<p>
		<strong>
			<%= c.author %>
		</strong>
		<small>
			<%= l(c.created_at, :format => :long) %><br />
			<%= c.body %>
		</small>
	</p>
<% end %>

<hr />

<h4>Tambahkan Komentar : </h4>
<%= form_for([@post, @post.comments.build]) do |f| %>
	
	<p>
		<%= f.label :Nama %><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :Komentar %><br />
		<%= f.text_area :body %>
	</p>
	<%= f.submit 'Kirim' %>
<% end %>

<h3>
	<%= link_to 'Home', post_path %>
</h3>