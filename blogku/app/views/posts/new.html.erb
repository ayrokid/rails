<%= form_for :post, class: 'form', url: posts_path do |f| %>
	<div class="form-group">
		<%= f.label :Judul %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :Isi %>
		<%= f.text_area :body, class: 'form-control' %>
	</div>
	<%= f.submit :Simpan, class: 'btn btn-success' %>
<% end %>