<h1> <%= @post.title %> </h1> 
<p>
	<%= @post.body %>
</p>
<h4>Komentar</h4>
<% @post.comments.each do |comment| %>
	<p>
		<strong><%= comment.author %></strong>
		<small><%= l(comment.created_at, :format => :long) %></small><br />
		<%= comment.body %>
	</p>
<% end %>

<h4>Tambahkan Komentar</h4>
<%= form_for([@post, @post.comments.build]) do  |f| %>

<p>
	<%= f.label :Nama %> <br />
	<%= f.text_field :author %>
</p> 
<p>
	<%= f.label :Komentar %> <br />
	<%= f.text_area :body %>
</p>

	<%= f.submit %>

<% end %>

<h4>
	<%= link_to 'Depan', posts_path %>
</h4>	
