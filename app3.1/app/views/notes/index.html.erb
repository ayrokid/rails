<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table class="table table-bordered"  >
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.notes %></td>
        <td><%= link_to 'Show', note, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_note_path(note), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_note_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Note 
<% end %>
